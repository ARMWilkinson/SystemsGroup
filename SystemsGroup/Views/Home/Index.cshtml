@model IEnumerable<Spot.Data.Products>

@{
    ViewBag.Title = "Home";
}
<header>
    <h2>Welcome To Spot2Spot</h2>
</header>

<table>
<div class="grid-x grid-padding-x">
    <div class="large-12 cell">
        <div id="homeCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#homeCarousel" data-slide-to="1"></li>
                <li data-target="#homeCarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/img/stock_one.jpg" alt="Stock One" />
                </div>

                <div class="item">
                    <img src="~/img/stock_two.jpg" alt="Stock Two" />
                </div>

                <div class="item">
                    <img src="~/img/stock_three.jpg" alt="Stock Three" />
                </div>
            </div>

            <a class="left carousel-control" href="#homeCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#homeCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
</table>
