@using SystemsGroup.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<link href="~/Content/fontawesome-all.css" rel="stylesheet"/>
 <link href="~/Content/style.css" rel="stylesheet"/>

<div class=" w3l-login-form">
    <h2>Login Here</h2>
    <form action="#" method="POST">

        <div class=" w3l-form-group">
            <label>EmailAdress:</label>
            <div class="group">
                <i class="fas fa-user"></i>
                <input type="text" class="form-control" placeholder="EmailAdress" required="required" />
            </div>
        </div>
        <div class=" w3l-form-group">
            <label>Password:</label>
            <div class="group">
                <i class="fas fa-unlock"></i>
                <input type="password" class="form-control" placeholder="Password" required="required" />
            </div>
        </div>
        <div class="forgot">
            <a href="#">Forgot Password?</a>
            <p><input type="checkbox">Remember Me</p>
        </div>
        <button type="submit">Login</button>
    </form>
    <p class=" w3l-register-p">Don't have an account?<a href="#" class="register"> Register</a></p>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}