<p>
    @Html.ActionLink("Add To Cart", "AddToCart", new { id = Model.Id, Controller = "Cart" }) |
    @if (Session["isAdmin"] != null && bool.Parse(Session["isAdmin"].ToString()) == true)
    {@Html.ActionLink("Edit", "UpdateProduct", new { id = Model.Id, Controller = "ProductsAdmin" })} |
    @Html.ActionLink("Back to List", "GetProducts") |
    @if (Session["isAdmin"] != null && bool.Parse(Session["isAdmin"].ToString()) == true)
    {@Html.ActionLink("Delete Product", "DeleteProduct", new { id = Model.Id, Controller = "ProductsAdmin" })}
</p>
