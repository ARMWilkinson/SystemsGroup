@model IEnumerable<Spot.Data.Products>

@{
    ViewBag.Title = "Products";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<h2>List of All Products</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartNumber)

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartNumber)
            </td>
            <td>
                @Html.ActionLink("Add To Cart", "AddToCart", new { id = item.Id, Controller = "Cart" }) |
                @if (Session["isAdmin"] != null && bool.Parse(Session["isAdmin"].ToString()) == true)
                {@Html.ActionLink("Edit", "UpdateProduct", new { id = item.Id, Controller = "ProductsAdmin" })} |
                @Html.ActionLink("Details", "GetProduct", new { id = item.Id }) |
                @if (Session["isAdmin"] != null && bool.Parse(Session["isAdmin"].ToString()) == true)
                {@Html.ActionLink("Delete", "DeleteProduct", new { id = item.Id, Controller = "ProductsAdmin" })} |
                @if (Session["isAdmin"] != null && bool.Parse(Session["isAdmin"].ToString()) == true)
                {@Html.ActionLink("Create New Product", "AddProduct", new { id = item.Id, Controller = "ProductsAdmin" })}
            </td>
        </tr>
    }

</table>